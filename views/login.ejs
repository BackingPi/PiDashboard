<!DOCTYPE html5>
<html>
    <head>
        <title>PiMonitor - Login</title>
        <link rel="stylesheet" href="/static/css/login.css" >
        <link rel="stylesheet" href="/static/modules/bootstrap/dist/css/bootstrap.min.css" >
        <script src="/static/modules/jquery/dist/jquery.min.js"> </script>
        <script src="/static/modules/bootstrap/dist/js/bootstrap.min.js"> </script>
    </head>
    <body>
        <div class="navbar navbar-default navbar-static-top" role="navigation">
            <div class="container">
                <h3 class="title_bar">Welcome to PiDashboard.js</h3>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <h3><span class="fa fa-sign-in"></span>Login</h3>
                    <form  role="form" method="post">
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="text" class="form-control" id="username" placeholder="Username">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" placeholder="Password">
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> Remember me
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
